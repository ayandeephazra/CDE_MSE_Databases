                  <ce:text>Transition metal dichalcogenide semiconductor</ce:text>
               </ce:keyword>
               <ce:keyword id="kwrd0015">
                  <ce:text>spintronics</ce:text>
               </ce:keyword>
               <ce:keyword id="kwrd0020">
                  <ce:text>valleytronics</ce:text>
               </ce:keyword>
               <ce:keyword id="kwrd0025">
                  <ce:text>spin-orbit coupling</ce:text>
               </ce:keyword>
               <ce:keyword id="kwrd0030">
                  <ce:text>angle-resolved photoemission spectroscopy</ce:text>
               </ce:keyword>
            </ce:keywords>
